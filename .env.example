# ===========================================
# BMT Web3 Mobile App Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# All EXPO_PUBLIC_ variables are available in client code

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:4002
EXPO_PUBLIC_API_TIMEOUT=30000

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=

# WalletConnect
EXPO_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# App Configuration
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_APP_NAME=BMT Web3 App
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_SENTRY_DSN=

# ===========================================
# Exchange API Configuration
# ===========================================
# Optional: Override default exchange API endpoints

# Binance API URLs
EXPO_PUBLIC_BINANCE_SPOT_URL=https://api.binance.com
EXPO_PUBLIC_BINANCE_FUTURES_URL=https://fapi.binance.com
EXPO_PUBLIC_BINANCE_TESTNET_SPOT_URL=https://testnet.binance.vision
EXPO_PUBLIC_BINANCE_TESTNET_FUTURES_URL=https://testnet.binancefuture.com

# Gate.io API URLs
EXPO_PUBLIC_GATE_SPOT_URL=https://api.gateio.ws/api/v4
EXPO_PUBLIC_GATE_FUTURES_URL=https://fx-api.gateio.ws/api/v4

# ===========================================
# Trading Configuration
# ===========================================
# Trading behavior settings

# Default exchange ('binance' or 'gate')
EXPO_PUBLIC_DEFAULT_EXCHANGE=gate

# Default trading symbol
EXPO_PUBLIC_DEFAULT_SYMBOL=BTC/USDT

# Leverage settings
EXPO_PUBLIC_DEFAULT_LEVERAGE=10
EXPO_PUBLIC_MAX_LEVERAGE=125
EXPO_PUBLIC_MIN_ORDER_SIZE=0.001

# Risk management defaults
EXPO_PUBLIC_DEFAULT_STOP_LOSS=5
EXPO_PUBLIC_DEFAULT_TAKE_PROFIT=10

# ===========================================
# Risk Management Thresholds
# ===========================================
# Risk level thresholds (percentages)
EXPO_PUBLIC_LOW_RISK_THRESHOLD=50
EXPO_PUBLIC_MEDIUM_RISK_THRESHOLD=20
EXPO_PUBLIC_HIGH_RISK_THRESHOLD=10
EXPO_PUBLIC_CRITICAL_RISK_THRESHOLD=5

# ===========================================
# API Key Validation
# ===========================================
# Minimum required lengths for API keys
EXPO_PUBLIC_BINANCE_API_KEY_MIN_LENGTH=40
EXPO_PUBLIC_BINANCE_API_SECRET_MIN_LENGTH=40
EXPO_PUBLIC_GATE_API_KEY_MIN_LENGTH=20
EXPO_PUBLIC_GATE_API_SECRET_MIN_LENGTH=20

# ===========================================
# UI Configuration
# ===========================================
# User interface settings

# Default theme ('light' or 'dark')
EXPO_PUBLIC_DEFAULT_THEME=light

# Chart configuration
EXPO_PUBLIC_CHART_HEIGHT=400
EXPO_PUBLIC_CHART_COMPACT_HEIGHT=220
EXPO_PUBLIC_CHART_INTERVAL=15

# Refresh intervals (milliseconds)
EXPO_PUBLIC_BALANCE_REFRESH_INTERVAL=30000
EXPO_PUBLIC_POSITIONS_REFRESH_INTERVAL=15000
EXPO_PUBLIC_MARKET_DATA_REFRESH_INTERVAL=5000

# ===========================================
# Security Configuration
# ===========================================
# Security and encryption settings
EXPO_PUBLIC_ENCRYPTION_KEY=bmt_encryption_key
EXPO_PUBLIC_ENCRYPTION_ALGORITHM=aes-256-gcm

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable features
EXPO_PUBLIC_ENABLE_DEBUG=false
EXPO_PUBLIC_ENABLE_TESTNET=false
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# ===========================================
# Development Settings
# ===========================================
# These are only used in development mode

# Port for web preview (should match package.json)
EXPO_DEV_SERVER_PORT=4004

# Enable experimental features in development
EXPO_PUBLIC_ENABLE_EXPERIMENTAL=false
